<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<!-- Configuraci칩n del Servlet de Registro -->
	<servlet>
		<servlet-name>RegistroUsuarioServlet</servlet-name>
		<servlet-class>servlets.RegistroUsuarioServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegistroUsuarioServlet</servlet-name>
		<url-pattern>/RegistroUsuarioServlet</url-pattern>
	</servlet-mapping>

	<!-- Configuraci칩n del Servlet de Login -->
	<servlet>
		<servlet-name>loginServer</servlet-name>
		<servlet-class>servlets.loginServer</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>loginServer</servlet-name>
		<url-pattern>/loginServer</url-pattern>
	</servlet-mapping>


	<!-- P치gina de inicio por defecto -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- Data Base conecti칩n -->
	<resource-ref>
    	<description>DB Connection</description>
    	<res-ref-name>jdbc/miBaseDatos</res-ref-name>
    	<res-type>javax.sql.DataSource</res-type>
    	<res-auth>Container</res-auth>
	</resource-ref>
		
	 <listener>
        <listener-class>servlets.InicializadorUsuarios</listener-class>
    </listener>
</web-app>